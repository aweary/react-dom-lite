{
  "parser": "babel-eslint",
  "plugins": ["flowtype"],
  "extends": ["jason/react", "prettier", "plugin:flowtype/recommended"],
  "globals": {
    "__DEV__": false,
    "__SVG__": false,
    "performance": false
  },
  "env": {
    "browser": true
  },
  "rules": {
    "flowtype/generic-spacing": "off",
    "flowtype/use-flow-type": "error"
  },
  "overrides": [
    {
      "files": ["**/__tests__/**/*.js"],
      "env": {
        "jest": true
      },
      "rules": {
        "react/prop-types": "off",
        "global-require": "off",
        "no-console": "off"
      },
      "settings": {
        "import/core-modules": [
          "react-dom-lite",
          "react-dom-lite/test-utils"
        ]
      }
    }
  ]
}
